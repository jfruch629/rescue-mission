<h1>New Question</h1>


<% if @question.errors.any? %>
  <ul class="errors">
    <% @question.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<hr>


<%= render 'form', question: @question %>

